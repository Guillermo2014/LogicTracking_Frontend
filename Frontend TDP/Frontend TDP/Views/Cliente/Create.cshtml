@model Frontend_TDP.Models.Cliente

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Registro de cliente</h1>

<h4>Llenar los siguientes datos: </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" required/>
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="apellido" class="control-label"></label>
                <input asp-for="apellido" class="form-control" required/>
                <span asp-validation-for="apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                <input asp-for="email" class="form-control" required/>
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movil" class="control-label"></label>
                <input asp-for="movil" class="form-control" required/>
                <span asp-validation-for="movil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cargo" class="control-label"></label>
                <input asp-for="cargo" class="form-control" required/>
                <span asp-validation-for="cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="idEmpresa" class="control-label"></label>
                    @Html.DropDownList("idEmpresa", (IEnumerable<SelectListItem>)ViewBag.Empresas, null, new { @class = "form-control" })
                <span asp-validation-for="idEmpresa" class="text-danger"></span>      
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>
