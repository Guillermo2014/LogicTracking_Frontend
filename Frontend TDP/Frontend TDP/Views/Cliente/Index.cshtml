@model IEnumerable<Frontend_TDP.Models.Cliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Clientes</h1>
<br />
<p>
    <!--<a asp-action="Create">Agregar</a>-->
    <!--<button asp-action="Create">Agregar</button>-->
    <a href="/Cliente/Create"><input type="button" class="btn btn-primary" value="Crear cliente"></a>
</p>

<div style="overflow-x:auto;">
    <table class="table table-bordered table-sm table-striped" cellspacing="0" width="120%">
        <thead class="table-dark text-center">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.movil)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cargo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.empresa.razonSocial)
                </th>
                <th>
                    editar
                </th>
                <th>
                    eliminar
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        <button type="button" value="Details" class="btn btn-primary">
                            @Html.ActionLink(".", "Details", new { id = item.id })
                            @Html.DisplayFor(modelItem => item.id)
                        </button>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.movil)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cargo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.empresa.razonSocial)
                    </td>
                    <td>
                        <button type="button" value="Editar" class="btn btn-outline-primary">

                            @Html.ActionLink("Editar", "Edit", new { /* id=item.PrimaryKey */ })
                        </button>
                    </td>
                    <td>
                        <button type="button" value="Eliminar" class="btn btn-outline-danger">
                            @Html.ActionLink("Eliminar", "Delete", new { /* id=item.PrimaryKey */ })
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

